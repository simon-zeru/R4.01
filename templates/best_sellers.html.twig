{# Sidebar des produits best sellers  #}
<div class="col-md-2" style="padding: 10px;">
    <div class="card">
        <div class="card-header text-center">
            <h5>
                <i class="fas fa-star"></i>
                Top Ventes								<i class="fas fa-star"></i>
            </h5>
        </div>
        <div class="card-body text-muted text-center">
            <ul class="list-group">
                {% for bestSeller in bestSellers %}
                <a href="{{ path('app_boutique_rayon', {'idCategorie': bestSeller.produit.categorie.id}) }}">
                    <li class="list-group-item text-center clickable top-produit">
                        <img src="{{ asset(bestSeller.produit.visuel) }}" style="height: 40px;"/>
                        <p class="top-produit">{{ bestSeller.produit.libelle }}<br><i>{{ bestSeller.nbVentes }}
                                vente(s)</i>
                        </p>
                    </li>
                </a>
                {% endfor %}
            </ul>

        </div>
    </div>
</div>