{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <a class="btn-back text-secondary" href="{{ path('app_boutique') }}">
                <i class="fas fa-2x fa-arrow-circle-left"></i>
            </a>
            <h3>
                Commande Passée
            </h3>
        </div>
        <div class="card-body">
            L'usager
            {{ nom }}
            {{ prenom }}
            a passé la commande n°
            <span class="badge badge-pill badge-secondary">{{ numCommande }}</span>
            le
            {{ dateCommande }}
            <hr>
            <a class="btn btn-primary" href="{{ path('app_boutique') }}">
                Mes commandes
            </a>
        </div>
    </div>
{% endblock %}
